<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AM">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="AW">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WA">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="MA">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AM_W" parent="AM">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
     <style name="AW_W" parent="AW">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
     <style name="MA_W" parent="MA">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
     <style name="WA_W" parent="WA">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MM_V" parent="MM">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MW_V" parent="MW">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="WM_H" parent="WM">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="WW_H" parent="WW">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--line-->
    <style name="Line_H" parent="MA">
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Line_V" parent="AM">
        <item name="android:layout_width">1dp</item>
    </style>
</resources>